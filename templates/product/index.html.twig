    <script>
        const select = document.getElementById('category');
        select.addEventListener('change', e => {
            let url = '{{ path('app_product_all', {'category': '0'}) }}';
            url = url.replace('0', e.target.value);
            window.location.replace(url);
        })
    </script>

{% endblock %}